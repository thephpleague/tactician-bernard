{
    "name": "indigophp/doris",
    "description": "Doris is a remote command bus implementation based on Bernard and Tactician",
    "license": "MIT",
    "keywords": ["doris", "bernard", "tactician", "command-bus"],
    "homepage": "https://indigophp.com",
    "authors": [
        {
            "name": "Márk Sági-Kazár",
            "email": "mark.sagikazar@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "bernard/bernard": "dev-master",
        "league/tactician": "dev-master",
        "league/event": "~2.0.0"
    },
    "require-dev": {
        "phpspec/phpspec": "~2.1.0",
        "henrikbjorn/phpspec-code-coverage" : "~1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Doris\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Doris\\Stub\\": "stub/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
